{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["node"],
    "verbatimModuleSyntax": true,
    "erasableSyntaxOnly": true,
    "baseUrl": "..",
    "paths": {
      "@engine/*": ["src/engine/*"],
      "@ai/*": ["src/ai/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../src/engine/**/*.ts",
    "../src/ai/**/*.ts",
    "../src/shared/**/*.ts"
  ]
}
